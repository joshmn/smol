#!/usr/bin/env bash

VERSION=$1

printf "module Smol\n  VERSION = \"$VERSION\"\nend\n" > ./lib/smol/version.rb
bundle
git add Gemfile.lock lib/smol/version.rb
git commit -m "Bump version for $VERSION"
git push
git tag v$VERSION
git push --tags
gem build smol.gemspec
gem push "smol-$VERSION.gem" --host https://rubygems.org
rm "smol-$VERSION.gem"